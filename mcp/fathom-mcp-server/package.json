{
  "name": "fathom-mcp-servers",
  "version": "1.0.0",
  "description": "Fathom meeting transcription MCP server - A Model Context Protocol (MCP) server that provides access to Fathom meeting recordings, summaries, and transcripts.",
  "main": "index.js",
  "type": "module",
  "bin": {
		"fathom-mcp-server": "dist/index.js"
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsx src/index.ts",
		"start": "node dist/index.js",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"test": "node --test dist/*.test.js",
		"test:watch": "node --test --watch dist/*.test.js",
		"prepublishOnly": "npm run build"
	},
	"keywords": [
		"mcp",
		"model-context-protocol",
		"fathom",
		"meeting",
		"transcription"
	],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "^2.3.2",
    "@types/node": "^24.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.2",
    "zod": "^3.25.76"
  }
}
